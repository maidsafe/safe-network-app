{
    "compilerOptions": {
        "baseUrl": ".",
        "moduleResolution": "node",
        "target": "esnext",
        "allowJs": true,
        "noEmit": true,
        "jsx": "react",
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "paths": {
            "$Tests/*": ["__tests__/*"],
            "$App/*": ["app/*"],
            "$Assets/*": ["app/assets/*"],
            "$Actions/*": ["app/actions/*"],
            "$Store/*": ["app/store/*"],
            "$Reducers/*": ["app/reducers/*"],
            "$Logger": ["app/logger.ts"],
            "$Components/*": ["app/components/*"],
            "$Definitions/*": ["app/definitions/*"],
            "$Constants/*": ["app/constants/*"],
            "$Constants": ["app/constants/index.ts"],
            "$Utils/*": ["app/utils/*"],
            "$Package": ["package.json"]
        }
    },
    "exclude": [
        "*.config*?js",
        "app/*.prod.js",
        "app/dist",
        "node_modules",
        "*.config.js"
    ]
}
